<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://static.vinepair.com/wp-content/uploads/2017/11/50-best-cocktails-inside.jpg');">
  <div class="banner-content">
    <h1>Cocktail World</h1>
    <p>Which is your today's cocktail???</p>
    <%= link_to "Add cocktail", new_cocktail_path, class: 'btn btn-primary'%>
  </div>
</div>
<div class="content">
  <ul>
    <% @cocktails.each do |cocktail| %>
    <li>
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
      <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Delete?" } do %>
      <i class="fa fa-trash destroy_dose"></i>
      <% end %>
    </li>
    <% end %>
  </ul>
</div>